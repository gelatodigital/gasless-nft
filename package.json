{
  "name": "@gelatonetwork/nft-relay-2771",
  "version": "1.0.0",
  "description": "NFT template smart contract that works with GelatoRelay ERC2771",
  "repository": "https://github.com/gelatodigital/nft-relay-2771",
  "author": "gelato legendary members club",
  "private": false,
  "scripts": {
    "build": "yarn clean && yarn install && yarn compile && npx tsc",
    "compile": "npx hardhat compile --force",
    "clean": "rm -rf dist",
    "deploy": "npx hardhat deploy",
    "format": "prettier --write */**/*.*{js,sol,json,md,ts}",
    "format:check": "prettier --check */**/*.*{js,sol,json,md,ts}",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint contracts/**/*.sol",
    "postinstall": "yarn husky install",
    "test": "npx hardhat test",
    "verify": "npx hardhat etherscan-verify"
  },
  "license": "ISC",
  "devDependencies": {
    "@gelatonetwork/relay-context": "2.1.0",
    "@gelatonetwork/relay-sdk": "3.5.0",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-waffle": "2.0.5",
    "@openzeppelin/contracts": "4.8.1",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v5": "10.2.0",
    "@typechain/hardhat": "6.1.5",
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/node": "18.14.0",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "chai": "4.3.7",
    "dotenv": "16.0.3",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethereum-waffle": "4.0.10",
    "ethers": "5.7.1",
    "hardhat": "2.12.7",
    "hardhat-deploy": "0.11.23",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "prettier-plugin-solidity": "1.1.2",
    "solhint": "3.4.0",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.1",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*.*{js,sol,json,md,ts,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
